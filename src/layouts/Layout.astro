---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
    title: string;
    description: string;
    image?: string;
}

const { title, description } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead
            title={`${title} | Joe Duncko's Blog`}
            description={description}
        />
    </head>

    <body class="max-w-3xl m-auto p-4 pb-1 min-h-screen flex flex-col">
        <Header />

        <main class="flex-grow flex flex-col">
            <slot />
        </main>

        <Footer />

        {/* SimpleAnalytics */}
        <script async defer src="https://sa.joeduncko.com/latest.js"></script>
        <noscript>
            <img src="https://sa.joeduncko.com/noscript.gif" alt="" />
        </noscript>
    </body>
</html>
