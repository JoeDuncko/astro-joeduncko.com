---
import { communities } from "../pages/api/communities";
import { DataCard } from "./DataCard.astro";
import { ExternalLink } from "./ExternalLink.astro";
---

<DataCard title="Communities">
    <ul>
        {
            communities.map((membership) => (
                <li class="mb-2">
                    <ExternalLink
                        href={membership.link}
                        title={`To ${membership.name}`}
                    >
                        {membership.name}
                    </ExternalLink>{" "}
                    ({membership.position}): {membership.description}
                </li>
            ))
        }
    </ul>
</DataCard>
