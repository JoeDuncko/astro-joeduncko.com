---
import { CATCH_PHASE, MY_NAME } from "../consts";
import { socials } from "../pages/api/socials";

const today = new Date();
---

<footer class="max-w-screen-lg sm:flex text-xs print:hidden items-center">
    <div class="text-center sm:text-left flex-1">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            height="1em"
            width="1em"
