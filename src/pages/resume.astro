---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { socials } from "../pages/api/socials";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />

        <main style={{ textAlign: "center" }}>
            {/* Wrapper that sets print width for whole resume */}
            <div class="print:min-w-[960px]">
                {/* TODO: move this to its own component */}
                <div class="mb-4 hidden justify-between print:flex text-sm">
                    <div>
                        <h1 class="text-4xl">Joe Duncko</h1>
                    </div>
                    <div>
                        <div class="text-right">
                            <a href="mailto:personal@JoeDuncko.com"
                                >personal@JoeDuncko.com</a
                            >{" "}
                            | <a href="tel:330-719-1223">(330) 719 - 1223</a> |{
                                " "
                            }
                            <a href="https://joeduncko.com/">JoeDuncko.com</a>
                        </div>
                        <div class="text-right">
                            {
                                socials.map((social, i, array) => (
                                    <a href={social.link}>
                                        <svg
                                            width="18"
                                            height="18"
                                            fill="currentColor"
                                            viewBox="0 0 16 16"
                                        >
                                            <path d={social.pathD} />
                                        </svg>{" "}
                                        {social.printFriendlyLabel}
                                        {i !== array.length - 1 && " | "}
                                    </a>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <div
                    class="flex flex-col md:flex-row print:flex-row md:gap-8 print:gap-8"
                >
                    <!-- <div class="flex-1">
                        <Experiences />
                    </div>
                    <div class="flex-1">
                        <Education />
                        <Communities />
                        <OpenSourceContributions />
                        <Projects />
                        <Interests />
                        <Socials class="print:hidden" />
                        <Contact class="print:hidden" />
                    </div> -->
                </div>
            </div>
        </main>

        <Footer />
    </body>
</html>
